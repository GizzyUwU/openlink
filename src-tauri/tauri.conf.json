{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "edudesk",
  "version": "0.1.0",
  "identifier": "com.edudesk.app",
  "build": {
    "beforeDevCommand": "bun run dev-server",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Edulink One",
        "width": 800,
        "height": 600,
        "backgroundColor": "#414c65",
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
