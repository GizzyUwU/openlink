{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "openlink",
  "version": "0.1.0",
  "identifier": "com.openlink",
  "build": {
    "beforeDevCommand": "bun run dev-server",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn run build:frontend",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Openlink",
        "width": 800,
        "height": 600,
        "backgroundColor": "#414c65",
        "decorations": false
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "resources": ["../src/public/**/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDkxNkMyRUY1QjNBODI0RjgKUldUNEpLaXo5UzVza1p0S1MzcjhRR21vRk9WdElqNHNnUDZSZ2xCaWhhTVExa1dmSFhxVUIrN28K",
      "endpoints": [
        "https://github.com/GizzyUwU/openlink/releases/latest/download/latest.json"
      ]
    }
  }
}
