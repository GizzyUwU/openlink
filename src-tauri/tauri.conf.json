{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "openlink",
  "version": "0.1.0",
  "identifier": "com.openlink",
  "build": {
    "beforeDevCommand": "bun run dev-server",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build:frontend",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Openlink",
        "width": 800,
        "height": 600,
        "backgroundColor": "#414c65",
        "decorations": false
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["../src/public/**/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
